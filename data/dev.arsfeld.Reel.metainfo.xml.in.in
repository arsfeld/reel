<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APPLICATION_ID@</id>
  
  <name>Reel</name>
  <summary>A modern media player for GNOME</summary>
  
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  
  <description>
    <p>
      Reel is a native Linux media player that brings your Plex and Jellyfin libraries to the GNOME desktop. 
      Built with Rust and GTK4, it delivers a fast, reliable media experience without the overhead of web technologies.
    </p>
    <p>Features:</p>
    <ul>
      <li>Native GTK4/libadwaita interface that integrates seamlessly with GNOME</li>
      <li>Support for multiple media backends (Plex, Jellyfin, and local files)</li>
      <li>Offline-first design with SQLite caching</li>
      <li>Hardware-accelerated video playback via GStreamer</li>
      <li>Fast and memory-safe, written entirely in Rust</li>
      <li>Background synchronization that doesn't block the UI</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">@APPLICATION_ID@.desktop</launchable>
  
  <screenshots>
    <screenshot type="default">
      <caption>Main window showing media library</caption>
      <image>https://raw.githubusercontent.com/arsfeld/gnome-reel/main/screenshots/main-window.png</image>
    </screenshot>
    <screenshot>
      <caption>TV show details with episode list</caption>
      <image>https://raw.githubusercontent.com/arsfeld/gnome-reel/main/screenshots/show-details.png</image>
    </screenshot>
  </screenshots>
  
  <url type="homepage">https://github.com/arsfeld/gnome-reel</url>
  <url type="bugtracker">https://github.com/arsfeld/gnome-reel/issues</url>
  <url type="vcs-browser">https://github.com/arsfeld/gnome-reel</url>
  
  <developer id="dev.arsfeld">
    <name>arsfeld</name>
  </developer>
  
  <provides>
    <binary>reel</binary>
  </provides>
  
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  
  <content_rating type="oars-1.1">
    <content_attribute id="social-info">mild</content_attribute>
  </content_rating>
  
  <releases>
    <release version="@VERSION@" date="2025-08-20">
      <description>
        <p>First major release with comprehensive media server support:</p>
        <ul>
          <li>Full Plex integration with OAuth authentication</li>
          <li>Jellyfin server support</li>
          <li>Cinematic UI with backdrop images and metadata</li>
          <li>Hardware-accelerated GStreamer video playback</li>
          <li>Watch status tracking and progress indicators</li>
          <li>Continue Watching and Recently Added sections</li>
          <li>Multi-level image caching with HTTP/2 optimization</li>
          <li>Instant startup with SQLite offline cache</li>
          <li>Library filtering and sorting capabilities</li>
        </ul>
      </description>
    </release>
  </releases>
  
  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>ModernToolkit</kudo>
  </kudos>
</component>